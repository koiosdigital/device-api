generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum DeviceType {
  LANTERN
  MATRX
}

model Device {
  id        String   @id @unique
  type      DeviceType

  claims DeviceClaims[]
  online Boolean @default(false)

  createdAt DateTime @default(now())

  deviceSettingsCommon DeviceSettingsCommon?
  deviceSettingsLantern DeviceSettingsLantern?
  deviceSettingsMatrx   DeviceSettingsMatrx?

  LanternGroupDevices LanternGroupDevices[]
  
  MatrxApplets MatrxApplets[]
}

enum UserRole {
  DEVICE_OWNER
  DEVICE_SHARED_USER
}

model DeviceClaims {
  id       Int  @id @default(autoincrement())
  
  device  Device @relation(fields: [deviceId], references: [id])
  deviceId String

  user_id String
  role    UserRole

  createdAt DateTime @default(now())
}

model DeviceSettingsCommon {
  id        Int   @id @default(autoincrement())
  device    Device   @relation(fields: [deviceId], references: [id])
  deviceId  String @unique
  
  displayName String
}

model DeviceSettingsLantern {
  id        Int   @id @default(autoincrement())
  device    Device   @relation(fields: [deviceId], references: [id])
  deviceId  String @unique

  brightness Int @default(255)
  sleep_start Int @default(0) //seconds after midnight
  sleep_end   Int @default(0) //seconds after midnight
}

model DeviceSettingsMatrx {
  id        Int   @id @default(autoincrement())
  device    Device   @relation(fields: [deviceId], references: [id])
  deviceId  String @unique

  brightness Int
  light_sensor_enabled Boolean @default(false) //If true, brightness will be set based on light sensor
  sleep_start Int @default(0) //seconds after midnight
  sleep_end   Int @default(0) //seconds after midnight
}

model LanternGroup {
  id       Int   @id @default(autoincrement())
  name     String

  owner_id String
  join_code String @unique @default(cuid())

  createdAt DateTime @default(now())

  LanternGroupDevices LanternGroupDevices[]
}

model LanternGroupDevices {
  id       Int   @id @default(autoincrement())
  group_id Int
  device_id String

  triggered_set_effect  String @default("solid") //What effect to set group when this device is triggered
  triggered_set_color   String @default("#000000") //What color to set group when this device is triggered, if effect depends on color

  group LanternGroup @relation(fields: [group_id], references: [id])
  device Device @relation(fields: [device_id], references: [id])
}

model MatrxApplets {
  id      String    @id @default(uuid())
  deviceId String
  device   Device @relation(fields: [deviceId], references: [id])
  createdAt DateTime @default(now())

  appletData Json //JSON data for the applets, can be used to store settings or state
  enabled Boolean @default(true) //If false, applets will not run on the device

  skipped_by_user Boolean @default(false) //If true, the user has skipped the applet setup
  pinned_by_user Boolean @default(false) //If true, the user has pinned the applet to the device
  displayTime Int @default(0) //How long the applet should be displayed in seconds, 0 means no limit
  sortOrder Int @default(0) //Order of the applet in the list, lower numbers come first
}