generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum DeviceType {
  LANTERN
  MATRX
}

model Device {
  id        String   @id @unique
  type      DeviceType

  claims DeviceClaims[]
  online Boolean @default(false)

  createdAt DateTime @default(now())

  deviceSettingsCommon DeviceSettingsCommon?
  deviceSettingsLantern DeviceSettingsLantern?
  deviceSettingsMatrx   DeviceSettingsMatrx?

  LanternGroupDevices LanternGroupDevices[]
}

enum UserRole {
  DEVICE_OWNER
  DEVICE_SHARED_USER
}

model DeviceClaims {
  id       Int  @id @default(autoincrement())
  
  device  Device @relation(fields: [deviceId], references: [id])
  deviceId String

  user_id String
  role    UserRole

  createdAt DateTime @default(now())
}

model DeviceSettingsCommon {
  id        Int   @id @default(autoincrement())
  device    Device   @relation(fields: [deviceId], references: [id])
  deviceId  String @unique
  
  displayName String
}

model DeviceSettingsLantern {
  id        Int   @id @default(autoincrement())
  device    Device   @relation(fields: [deviceId], references: [id])
  deviceId  String @unique

  brightness Int @default(255)
  my_effect  Int @default(0)
  my_red     Int @default(0)
  my_green   Int @default(0)
  my_blue    Int @default(0)
  my_speed   Int @default(0)
}

model DeviceSettingsMatrx {
  id        Int   @id @default(autoincrement())
  device    Device   @relation(fields: [deviceId], references: [id])
  deviceId  String @unique

  brightness Int
}

model LanternGroup {
  id       Int   @id @default(autoincrement())
  name     String

  owner_id String
  join_code String @unique @default(cuid())

  createdAt DateTime @default(now())

  LanternGroupDevices LanternGroupDevices[]
}

model LanternGroupDevices {
  id       Int   @id @default(autoincrement())
  group_id Int
  device_id String

  group LanternGroup @relation(fields: [group_id], references: [id])
  device Device @relation(fields: [device_id], references: [id])
}